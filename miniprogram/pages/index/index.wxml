<!--index.wxml-->

<view wx:if="{{isHide}}">
    <view wx:if="{{canIUse}}" >
        <view class='header'>
            <image src='https://6465-dev-qt1a0-1301454819.tcb.qcloud.la/wx_login.png?sign=79fee9e7e362d3ee776bfcd70f8dda2b&t=1585879359'></image>
        </view>

        <view class='content'>
            <view>申请获取以下权限</view>
            <text>获得你的公开信息(昵称，头像等)</text>
        </view>

        <button class='bottom' type='primary' open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="bindGetUserInfo">
            授权登录
        </button>
    </view>
    <view wx:else>请升级微信版本</view>
</view>

<view wx:else>
    <view>我的首页内容</view>
</view>