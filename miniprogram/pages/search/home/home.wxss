/* pages/search/home/home.wxss */
.page{
    height: 1200rpx;
    width: 100%;
    background-size: cover;
}
.search{
  display:flex;
  align-items:center;
  padding:20rpx;
  border:1rpx solid #e0e0e0;
  margin:20rpx;
  border-radius:5rpx;
  box-shadow:0 0 5rpx #e0e0e0;
}
.search image{
  width:40rpx;
  height:40rpx;
  margin-right:20rpx;
}

.input_counter{
  position: fixed;
  left: 7%;
  top: 5%;
  display: flex;
  flex-direction: column;
  border-radius: 50rpx;
  width:86% ;
  height: 90rpx;
  border: 1rpx solid #4a475b;
  align-items: center;
  background-color: white;
  opacity: 0.78;
}

.input{
  width:85% ;
  height: 78rpx;
  color: black;
  margin-top: 5rpx;
}
.showwindow{
  position: fixed;
  left: 10%;
  top: 15%;
  display: flex;
  flex-direction: column;
  width:78% ;
  border: 1rpx solid #4a475b;
  background-color: rgb(247, 247, 247);
  opacity: 0.78;
  padding:10px; 
}
.read{
  position: fixed;
  right: 15%;
  top: 17%;
  display: flex;
  flex-direction: column;
  width:60rpx;
  height: 60rpx;
  border-radius: 45%;

  background-color: white;
  opacity: 0.78;
}
.sc{
  position: fixed;
  right: 25%;
  top: 17%;
  display: flex;
  flex-direction: column;
  width:60rpx;
  height: 60rpx;

  background-color: white;
  opacity: 0.78;
}